   {{#unless devour}}
   {{> burgers/burger-block devour=true}}
   {{/unless}}
   {{/each}}
</ul>

<h2>Burgers you have devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devour}}
    {{>burgers/burger-block devour=false}}
